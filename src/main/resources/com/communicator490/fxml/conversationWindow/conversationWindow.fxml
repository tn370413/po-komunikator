<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.communicator490.controllers.conversationWindow.ConversationWindowController"
            prefHeight="400.0" prefWidth="600.0" styleClass="root-pane">
    <top>
        <Pane styleClass="header">
            <Label text="Conversation with 192.168.0.1" fx:id="headerLabel"/>
        </Pane>
    </top>
    <center>
            <fx:include fx:id="messagesOuterBox" source="messagesBox.fxml"/>

    </center>
    <bottom>
        <HBox>
            <TextField fx:id="messageToSend" styleClass="message-to-send">

            </TextField>

            <TextField fx:id="messageToSendPortDebug" text="1024">

            </TextField>
            <Button text="Send" fx:id="sendButton" styleClass="send-button">

            </Button>
        </HBox>
    </bottom>

    <stylesheets>
        <URL value="@../../css/conversationWindow.css" />
    </stylesheets>
</BorderPane>
