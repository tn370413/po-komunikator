<GridPane fx:controller="sample.mainWindowController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <BorderPane>
        <top>
        <VBox id="main-box">
            <BorderPane styleClass="header">
                <top>
                <Label text="Komunikator490" id="komunikatorxd-label"></Label>
                </top>
            </BorderPane>
            <VBox id="your-id-info" styleClass="belowHeader">
                <HBox id="your-ip">
                    <Label text="Your IP: " id="your-ip-label" styleClass="info-label"></Label>
                    <Label text="192.168.0.1" id="your-ip-value-label"></Label>
                </HBox>
                <HBox id="your-port" fx:id="changePortBox">
                    <Label text="Your port: " id="your-port-label" styleClass="info-label"></Label>
                    <Label text="490" id="your-port-value-label" fx:id="changePortText"></Label>
                    <Label text=" (Change)" styleClass="your-port-change-label" fx:id="changePortLabel"></Label>
                </HBox>
            </VBox>
            <VBox id="connect-box" styleClass="belowHeader">
                <Label text="Connect:" id="connect-label" styleClass="info-label"></Label>
                <HBox id="their-ip">
                    <Label text="IP: " id="their-ip-label" styleClass="info-label"></Label>
                    <TextField text="???.???.???.???" id="their-ip-entry"></TextField>
                </HBox>
                <HBox id="their-port">
                    <Label text="Port: " id="their-port-label" styleClass="info-label"></Label>
                    <TextField text="?????" id="their-port-entry"></TextField>
                </HBox>
                <Button text="CONNECT" id="connect-button"></Button>
            </VBox>
            <Label id="error-success-label" styleClass="belowHeader" text="Error. Why? Fuck you, that's why"></Label>
        </VBox>
        </top>
    </BorderPane>
</GridPane>